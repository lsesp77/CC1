}

//Principal

int main(){

    int n; cout<< "Ingrese el tamaÃ±o del arreglo: "; cin >> n;
    int array [n];
    cout<< "Ingrese los elementos del arreglo: ";
    for (int i=0; i<n; i++)
         cin>>array[i];
    cout<< "sum: "<< sum (array, n) << endl;
    cout<< "prom: "<< prom (array, n) << endl;
    cout<< "inversion del arreglo: " << endl;
    inv(array, n);
}


